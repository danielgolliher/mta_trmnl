<!-- 
  TRMNL Liquid Template for L Train Arrivals
  Copy this into your Private Plugin's "Edit Markup" section
  
  This template expects polling data from the /arrivals/trmnl endpoint
-->

<div class="layout layout--col gap--space-between h--full">
  
  <!-- Header -->
  <div class="flex items--center gap--md">
    <div class="flex items--center justify--center" style="background: #a7a9ac; border-radius: 50%; width: 56px; height: 56px;">
      <span style="font-size: 36px; font-weight: bold;">L</span>
    </div>
    <div>
      <div class="text--title">{{ station | default: "Metropolitan / Lorimer" }}</div>
      <div class="text--label meta">Updated {{ updated | default: "--:--" }}</div>
    </div>
  </div>

  <!-- Manhattan Bound Trains (Primary) -->
  <div class="layout layout--col gap--sm flex--grow">
    <div class="text--label uppercase">Manhattan → 8th Ave</div>
    
    {% if manhattan_list.size > 0 %}
      <div class="layout layout--col gap--sm">
        {% for train in manhattan_list %}
          <div class="flex justify--space-between items--center {% if forloop.first %}text--title{% else %}text--body{% endif %}">
            <span>{{ train.minutes }}</span>
            <span class="meta">{{ train.time }}</span>
          </div>
          {% if forloop.first %}<hr class="divider" />{% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="text--body meta">No trains scheduled</div>
    {% endif %}
  </div>

  <!-- Divider -->
  <hr class="divider" />

  <!-- Canarsie Bound (Secondary/Smaller) -->
  <div class="layout layout--col gap--xs">
    <div class="text--label uppercase meta">Brooklyn → Canarsie</div>
    {% if canarsie_list.size > 0 %}
      <div class="flex gap--md text--body">
        {% for train in canarsie_list limit:3 %}
          <span>{{ train.minutes }}</span>
          {% unless forloop.last %}<span class="meta">·</span>{% endunless %}
        {% endfor %}
      </div>
    {% else %}
      <span class="text--body meta">No trains</span>
    {% endif %}
  </div>

</div>

